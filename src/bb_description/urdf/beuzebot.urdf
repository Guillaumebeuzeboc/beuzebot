<robot name="beuzebot" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:property name="PI" value="3.1415926535897931" />
  <xacro:property name="BASE_LINK_WIDTH" value="0.1465" />
  <xacro:property name="BASE_LINK_HEIGHT" value="0.205" />
  <xacro:property name="BASE_LINK_DEPTH" value="0.595" />

  <xacro:property name="BASE_LINK_TO_WHEEL_X" value="${BASE_LINK_WIDTH/2 - 0.0152}" />
  <xacro:property name="BASE_LINK_TO_WHEEL_Y" value="${BASE_LINK_DEPTH/2 - 0.02476}" />
  <xacro:property name="BASE_LINK_TO_WHEEL_Z" value="${-BASE_LINK_HEIGHT/2 + 0.0105}" />

  <xacro:property name="WHEEL_LENGTH" value="0.01" />
  <xacro:property name="WHEEL_RADIUS" value="0.045" />

  <xacro:property name="CASTER_PART_LENGTH" value="0.001" />
  <xacro:property name="CASTER_PART_RADIUS" value="0.045" />

  <xacro:property name="BASE_LINK_TO_CASTER_PART_X" value="0.0" />
  <xacro:property name="BASE_LINK_TO_CASTER_PART_Y" value="${-BASE_LINK_DEPTH/2 - 0.05}" />
  <xacro:property name="BASE_LINK_TO_CASTER_PART_Z" value="${-BASE_LINK_HEIGHT/2 + 0.03}" />

  <xacro:property name="CASTER_WHEEL_LENGTH" value="0.016" />
  <xacro:property name="CASTER_WHEEL_RADIUS" value="0.025" />

  <xacro:property name="CASTER_PART_TO_CASTER_WHEEL_X" value="0.0" />
  <xacro:property name="CASTER_PART_TO_CASTER_WHEEL_Y" value="-0.024" />
  <xacro:property name="CASTER_PART_TO_CASTER_WHEEL_Z" value="-0.036" />

  <material name="green">
    <color rgba="0 255 0 1"/>
  </material>
  <material name="orange">
    <color rgba="255 165 0 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 255 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <box size="${BASE_LINK_WIDTH} ${BASE_LINK_DEPTH} ${BASE_LINK_HEIGHT} "/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>
      <material name="green"/>
    </visual>
  </link>


  <link name="lwheel">
    <visual>
      <geometry>
        <cylinder length="${WHEEL_LENGTH}" radius="${WHEEL_RADIUS}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="base_to_lwheel" type="continuous">
    <parent link="base_link"/>
    <child link="lwheel"/>
    <axis xyz="0 0 1" />
    <origin xyz="${BASE_LINK_TO_WHEEL_X} ${BASE_LINK_TO_WHEEL_Y} ${BASE_LINK_TO_WHEEL_Z}" rpy="0 ${PI/2} 0"/>
  </joint>

  <link name="rwheel">
    <visual>
      <geometry>
        <cylinder length="${WHEEL_LENGTH}" radius="${WHEEL_RADIUS}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child link="rwheel"/>
    <axis xyz="0 0 1" />
    <origin xyz="${-BASE_LINK_TO_WHEEL_X - WHEEL_LENGTH/2} ${BASE_LINK_TO_WHEEL_Y} ${BASE_LINK_TO_WHEEL_Z}" rpy="0 ${PI/2} 0"/>
  </joint>

  <link name="caster_part">
    <visual>
      <geometry>
        <cylinder length="0.001" radius="0.046"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>


  <joint name="base_to_caster_part" type="continuous">
    <parent link="base_link"/>
    <child link="caster_part"/>
    <axis xyz="0 0 1" />
    <origin xyz="${BASE_LINK_TO_CASTER_PART_X} ${BASE_LINK_TO_CASTER_PART_Y} ${BASE_LINK_TO_CASTER_PART_Z}" rpy="0 0 0"/>
  </joint>

  <link name="caster_wheel">
    <visual>
      <geometry>
        <cylinder length="${CASTER_WHEEL_LENGTH}" radius="${CASTER_WHEEL_RADIUS}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="caster_part_to_caster_wheel" type="continuous">
    <parent link="caster_part"/>
    <child link="caster_wheel"/>
    <axis xyz="0 0 1" />
    <origin xyz="${CASTER_PART_TO_CASTER_WHEEL_X} ${CASTER_PART_TO_CASTER_WHEEL_Y} ${CASTER_PART_TO_CASTER_WHEEL_Z}" rpy="0 ${PI/2} 0"/>
  </joint>

</robot>
